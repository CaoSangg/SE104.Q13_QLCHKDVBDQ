<UserControl x:Class="Project_QLVangBacDaQuy.GUI.UserControls.QuanLyDanhMuc"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Project_QLVangBacDaQuy.GUI.UserControls"
             mc:Ignorable="d" 
 d:DesignHeight="700" d:DesignWidth="1100"
             Background="White"
             FontFamily="Segoe UI">

    <UserControl.Resources>
        <Style TargetType="TabItem">
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="Background" Value="Transparent"/>
            <Setter Property="Foreground" Value="#555"/>
            <Setter Property="Margin" Value="0,0,10,0"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="TabItem">
                        <Border x:Name="border" Background="{TemplateBinding Background}" 
                                BorderBrush="{TemplateBinding BorderBrush}" 
                                BorderThickness="0,0,0,2"
                                Padding="15,10">
                            <ContentPresenter x:Name="ContentSite" 
                                              VerticalAlignment="Center" 
                                              HorizontalAlignment="Center" 
                                              ContentSource="Header"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsSelected" Value="True">
                                <Setter TargetName="border" Property="BorderBrush" Value="{StaticResource LuxuryGold}"/>
                                <Setter Property="Foreground" Value="{StaticResource LuxuryGold}"/>
                                <Setter Property="FontWeight" Value="Bold"/>
                            </Trigger>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter Property="Foreground" Value="{StaticResource LuxuryGold}"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <Style x:Key="DeleteButton" TargetType="Button" BasedOn="{StaticResource GoldButton}">
            <Setter Property="Background" Value="#FF4D4D"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border x:Name="border" CornerRadius="8" Background="#FF4D4D">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter TargetName="border" Property="Opacity" Value="0.8"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
    </UserControl.Resources>

    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <TabControl Grid.Row="1" BorderThickness="0" Background="Transparent" Margin="0,10,0,0">

            <TabItem Header="NHÀ CUNG CẤP">
                <Grid Margin="0,20,0,0">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="350"/>
                        <ColumnDefinition Width="20"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>

                    <Border Grid.Column="0" BorderBrush="#E0E0E0" BorderThickness="1" CornerRadius="10" Padding="20" Background="White" VerticalAlignment="Top">
                        <Border.Effect>
                            <DropShadowEffect BlurRadius="10" ShadowDepth="2" Opacity="0.05" Color="Black"/>
                        </Border.Effect>
                        <StackPanel>
                            <TextBlock Text="THÔNG TIN NHÀ CUNG CẤP" Style="{StaticResource SectionHeader}" FontSize="18" Margin="0,0,0,20"/>

                            <Label Content="Tên Nhà Cung Cấp *"/>
                            <TextBox Name="txtTenNCC" Style="{StaticResource InputStyle}"/>

                            <Label Content="Địa Chỉ *"/>
                            <TextBox Name="txtDiaChiNCC" Style="{StaticResource InputStyle}"/>

                            <Label Content="Số Điện Thoại *"/>
                            <TextBox Name="txtSdtNCC" Style="{StaticResource InputStyle}"/>

                            <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" Margin="0,30,0,0">
                                <Button Name="btnThemNCC" Content="Thêm" Width="80" Style="{StaticResource GoldButton}" Click="btnThemNCC_Click" Margin="5"/>
                                <Button Name="btnSuaNCC" Content="Sửa" Width="80" Style="{StaticResource GoldButton}" Click="btnSuaNCC_Click" Margin="5"/>
                                <Button Name="btnXoaNCC" Content="Xóa" Width="80" Style="{StaticResource DeleteButton}" Click="btnXoaNCC_Click" Margin="5"/>
                            </StackPanel>

                            <Button Name="btnLamMoiNCC" Content="Làm mới" Height="35" Margin="5,15" Style="{StaticResource OutlineButton}" Click="btnLamMoiNCC_Click"/>
                        </StackPanel>
                    </Border>

                    <StackPanel Grid.Column="2" VerticalAlignment="Center" HorizontalAlignment="Center" Opacity="0.1" IsHitTestVisible="False">
                        <Border Width="200" Height="200" BorderBrush="#10151B" BorderThickness="3" CornerRadius="100" Margin="0,0,0,10" HorizontalAlignment="Center">
                            <TextBlock Text="💎" FontSize="100" HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                        <TextBlock Text="JEWELRY" FontSize="25" FontWeight="Bold" Foreground="#10151B" HorizontalAlignment="Center"/>
                        <TextBlock Text="MANAGER" Foreground="#10151B" FontSize="20" HorizontalAlignment="Center"/>
                    </StackPanel>

                    <DataGrid Name="dgvNCC" Grid.Column="2" Background="Transparent"
                              SelectionMode="Single" SelectionChanged="dgvNCC_SelectionChanged">
                        <DataGrid.Columns>
                            <DataGridTextColumn Header="MÃ" Binding="{Binding MaNCC}" Width="60"/>
                            <DataGridTextColumn Header="TÊN NHÀ CUNG CẤP" Binding="{Binding TenNCC}" Width="250"/>
                            <DataGridTextColumn Header="ĐỊA CHỈ" Binding="{Binding DiaChi}" Width="*"/>
                            <DataGridTextColumn Header="SĐT" Binding="{Binding SDT}" Width="120"/>
                        </DataGrid.Columns>
                    </DataGrid>
                </Grid>
            </TabItem>

            <TabItem Header="LOẠI SẢN PHẨM">
                <Grid Margin="0,20,0,0">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="350"/>
                        <ColumnDefinition Width="20"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>

                    <Border Grid.Column="0" BorderBrush="#E0E0E0" BorderThickness="1" CornerRadius="10" Padding="20" Background="White" VerticalAlignment="Top">
                        <Border.Effect>
                            <DropShadowEffect BlurRadius="10" ShadowDepth="2" Opacity="0.05" Color="Black"/>
                        </Border.Effect>
                        <StackPanel>
                            <TextBlock Text="THÔNG TIN LOẠI SẢN PHẨM" Style="{StaticResource SectionHeader}" FontSize="18" Margin="0,0,0,20"/>

                            <Label Content="Tên Loại Sản Phẩm *"/>
                            <TextBox Name="txtTenLoaiSP" Style="{StaticResource InputStyle}"/>

                            <Label Content="Phần Trăm Lợi Nhuận (VD: 0.1 = 10%) *"/>
                            <TextBox Name="txtLoiNhuan" Style="{StaticResource InputStyle}"/>

                            <Label Content="Đơn Vị Tính *"/>
                            <TextBox Name="txtDonVi" Style="{StaticResource InputStyle}"/>

                            <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" Margin="0,30,0,0">
                                <Button Name="btnThemLoaiSP" Content="Thêm" Width="80" Style="{StaticResource GoldButton}" Click="btnThemLoaiSP_Click" Margin="5"/>
                                <Button Name="btnSuaLoaiSP" Content="Sửa" Width="80" Style="{StaticResource GoldButton}" Click="btnSuaLoaiSP_Click" Margin="5"/>
                                <Button Name="btnXoaLoaiSP" Content="Xóa" Width="80" Style="{StaticResource DeleteButton}" Click="btnXoaLoaiSP_Click" Margin="5"/>
                            </StackPanel>

                            <Button Name="btnLamMoiLoaiSP" Content="Làm mới" Height="35" Margin="5,15" Style="{StaticResource OutlineButton}" Click="btnLamMoiLoaiSP_Click"/>
                        </StackPanel>
                    </Border>

                    <StackPanel Grid.Column="2" VerticalAlignment="Center" HorizontalAlignment="Center" Opacity="0.1" IsHitTestVisible="False">
                        <Border Width="200" Height="200" BorderBrush="#10151B" BorderThickness="3" CornerRadius="100" Margin="0,0,0,10" HorizontalAlignment="Center">
                            <TextBlock Text="💎" FontSize="100" HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                        <TextBlock Text="JEWELRY" FontSize="25" FontWeight="Bold" Foreground="#10151B" HorizontalAlignment="Center"/>
                        <TextBlock Text="MANAGER" Foreground="#10151B" FontSize="20" HorizontalAlignment="Center"/>
                    </StackPanel>

                    <DataGrid Name="dgvLoaiSP" Grid.Column="2" Background="Transparent"
                              SelectionChanged="dgvLoaiSP_SelectionChanged">
                        <DataGrid.Columns>
                            <DataGridTextColumn Header="MÃ" Binding="{Binding MaLoaiSP}" Width="60"/>
                            <DataGridTextColumn Header="TÊN LOẠI" Binding="{Binding TenLoaiSP}" Width="*"/>
                            <DataGridTextColumn Header="% LỢI NHUẬN" Binding="{Binding PhanTramLoiNhuan}" Width="150"/>
                            <DataGridTextColumn Header="ĐƠN VỊ" Binding="{Binding DonViTinh}" Width="120"/>
                        </DataGrid.Columns>
                    </DataGrid>
                </Grid>
            </TabItem>

            <TabItem Header="LOẠI DỊCH VỤ">
                <Grid Margin="0,20,0,0">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="350"/>
                        <ColumnDefinition Width="20"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>

                    <Border Grid.Column="0" BorderBrush="#E0E0E0" BorderThickness="1" CornerRadius="10" Padding="20" Background="White" VerticalAlignment="Top">
                        <Border.Effect>
                            <DropShadowEffect BlurRadius="10" ShadowDepth="2" Opacity="0.05" Color="Black"/>
                        </Border.Effect>
                        <StackPanel>
                            <TextBlock Text="THÔNG TIN LOẠI DỊCH VỤ" Style="{StaticResource SectionHeader}" FontSize="18" Margin="0,0,0,20"/>

                            <Label Content="Tên Loại Dịch Vụ *"/>
                            <TextBox Name="txtTenLoaiDV" Style="{StaticResource InputStyle}"/>

                            <Label Content="Đơn Giá Chuẩn (VNĐ) *"/>
                            <TextBox Name="txtDonGiaDV" Style="{StaticResource InputStyle}"/>

                            <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" Margin="0,30,0,0">
                                <Button Name="btnThemLoaiDV" Content="Thêm" Width="80" Style="{StaticResource GoldButton}" Click="btnThemLoaiDV_Click" Margin="5"/>
                                <Button Name="btnSuaLoaiDV" Content="Sửa" Width="80" Style="{StaticResource GoldButton}" Click="btnSuaLoaiDV_Click" Margin="5"/>
                                <Button Name="btnXoaLoaiDV" Content="Xóa" Width="80" Style="{StaticResource DeleteButton}" Click="btnXoaLoaiDV_Click" Margin="5"/>
                            </StackPanel>

                            <Button Name="btnLamMoiLoaiDV" Content="Làm mới" Height="35" Margin="5,15" Style="{StaticResource OutlineButton}" Click="btnLamMoiLoaiDV_Click"/>
                        </StackPanel>
                    </Border>

                    <StackPanel Grid.Column="2" VerticalAlignment="Center" HorizontalAlignment="Center" Opacity="0.1" IsHitTestVisible="False">
                        <Border Width="200" Height="200" BorderBrush="#10151B" BorderThickness="3" CornerRadius="100" Margin="0,0,0,10" HorizontalAlignment="Center">
                            <TextBlock Text="💎" FontSize="100" HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                        <TextBlock Text="JEWELRY" FontSize="25" FontWeight="Bold" Foreground="#10151B" HorizontalAlignment="Center"/>
                        <TextBlock Text="MANAGER" Foreground="#10151B" FontSize="20" HorizontalAlignment="Center"/>
                    </StackPanel>

                    <DataGrid Name="dgvLoaiDV" Grid.Column="2" Background="Transparent"
                              SelectionChanged="dgvLoaiDV_SelectionChanged">
                        <DataGrid.Columns>
                            <DataGridTextColumn Header="MÃ" Binding="{Binding MaLoaiDV}" Width="60"/>
                            <DataGridTextColumn Header="TÊN DỊCH VỤ" Binding="{Binding TenLoaiDV}" Width="*"/>
                            <DataGridTextColumn Header="ĐƠN GIÁ CHUẨN" Binding="{Binding DonGiaDV, StringFormat=N0}" Width="180"/>
                        </DataGrid.Columns>
                    </DataGrid>
                </Grid>
            </TabItem>
        </TabControl>
    </Grid>

</UserControl>
