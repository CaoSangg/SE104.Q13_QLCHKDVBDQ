<UserControl x:Class="Project_QLVangBacDaQuy.GUI.UserControls.UserControlTraCuuDichVu"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Project_QLVangBacDaQuy.GUI.UserControls"
             mc:Ignorable="d" 
             d:DesignHeight="650" d:DesignWidth="1100"
             FontFamily="Segoe UI">

    <Grid Background="#F5F7FA" Margin="10">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <Border Grid.Row="0" Background="White" CornerRadius="10" Margin="0,0,0,15" Padding="20">
            <Border.Effect>
                <DropShadowEffect BlurRadius="15" ShadowDepth="2" Opacity="0.1" Color="Black"/>
            </Border.Effect>

            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>

                <StackPanel>
                    <TextBlock Text="TRA CỨU TÌNH TRẠNG DỊCH VỤ" Style="{StaticResource SectionHeader}"/>
                    <TextBlock Text="Tìm kiếm phiếu dịch vụ theo thời gian, khách hàng hoặc trạng thái" Foreground="Gray" Margin="0,0,0,15"/>

                    <WrapPanel Orientation="Horizontal">
                        <StackPanel Margin="0,0,20,10">
                            <Label Content="Từ Ngày"/>
                            <DatePicker x:Name="dpTuNgay" Width="150" Height="40" VerticalContentAlignment="Center" FontSize="14"/>
                        </StackPanel>

                        <StackPanel Margin="0,0,20,10">
                            <Label Content="Đến Ngày"/>
                            <DatePicker x:Name="dpDenNgay" Width="150" Height="40" VerticalContentAlignment="Center" FontSize="14"/>
                        </StackPanel>

                        <StackPanel Margin="0,0,20,10">
                            <Label Content="Từ Khóa (Tên KH, SĐT, Mã Phiếu,...)"/>
                            <TextBox x:Name="txtTuKhoa" Width="250" Style="{StaticResource InputStyle}" 
                                     ToolTip="Nhập tên khách hàng, số điện thoại hoặc mã phiếu..." KeyDown="txtTuKhoa_KeyDown"/>
                        </StackPanel>

                        <StackPanel Margin="0,0,20,10">
                            <Label Content="Tình Trạng Phiếu"/>
                            <ComboBox x:Name="cboTinhTrang" Width="180">
                                <ComboBoxItem Content="Tất cả" IsSelected="True"/>
                                <ComboBoxItem Content="Chưa hoàn thành"/>
                                <ComboBoxItem Content="Hoàn thành"/>
                            </ComboBox>
                        </StackPanel>
                    </WrapPanel>
                </StackPanel>

                <StackPanel Grid.Column="1" Orientation="Horizontal" VerticalAlignment="Bottom" Margin="0,0,0,10">
                    <Button x:Name="btnLamMoi" Content="LÀM MỚI" Width="100" Height="40" Margin="0,0,10,0"
                            Click="BtnLamMoi_Click" Cursor="Hand"
                            Background="White" Foreground="#555" BorderBrush="#CCC" BorderThickness="1" FontWeight="SemiBold">
                        <Button.Template>
                            <ControlTemplate TargetType="Button">
                                <Border x:Name="bdr" CornerRadius="5" Background="{TemplateBinding Background}" BorderBrush="{TemplateBinding BorderBrush}" BorderThickness="1">
                                    <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                                </Border>
                                <ControlTemplate.Triggers>
                                    <Trigger Property="IsMouseOver" Value="True">
                                        <Setter TargetName="bdr" Property="Background" Value="#F5F5F5"/>
                                    </Trigger>
                                </ControlTemplate.Triggers>
                            </ControlTemplate>
                        </Button.Template>
                    </Button>

                    <Button x:Name="btnTimKiem" Content="TÌM KIẾM" Width="120" Height="40"
                            Click="BtnTimKiem_Click" Cursor="Hand"
                            Background="#D4AF37" Foreground="#10151B" FontWeight="Bold" FontSize="14" BorderThickness="0">
                        <Button.Template>
                            <ControlTemplate TargetType="Button">
                                <Border x:Name="bdr" CornerRadius="5" Background="{TemplateBinding Background}">
                                    <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                                </Border>
                                <ControlTemplate.Triggers>
                                    <Trigger Property="IsMouseOver" Value="True">
                                        <Setter TargetName="bdr" Property="Opacity" Value="0.9"/>
                                    </Trigger>
                                </ControlTemplate.Triggers>
                            </ControlTemplate>
                        </Button.Template>
                    </Button>
                </StackPanel>
            </Grid>
        </Border>

        <Border Grid.Row="1" Background="White" CornerRadius="10" ClipToBounds="True">
            <Border.Effect>
                <DropShadowEffect BlurRadius="15" ShadowDepth="2" Opacity="0.1" Color="Black"/>
            </Border.Effect>

            <Grid>
                <StackPanel VerticalAlignment="Center" HorizontalAlignment="Center" Opacity="0.08" IsHitTestVisible="False">
                    <Border Width="200" Height="200" BorderBrush="#10151B" BorderThickness="4" CornerRadius="100" Margin="0,0,0,15" HorizontalAlignment="Center">
                        <TextBlock Text="💎" FontSize="100" HorizontalAlignment="Center" VerticalAlignment="Center"/>
                    </Border>
                    <TextBlock Text="JEWELRY" FontSize="30" FontWeight="Bold" Foreground="#10151B" HorizontalAlignment="Center"/>
                    <TextBlock Text="MANAGER" Foreground="#10151B" FontSize="25" HorizontalAlignment="Center"/>
                </StackPanel>

                <DataGrid x:Name="dgvKetQua" Background="Transparent">
                    <DataGrid.Resources>
                        <Style TargetType="ScrollBar" BasedOn="{StaticResource ThinScrollBarStyle}"/>
                    </DataGrid.Resources>

                    <DataGrid.Columns>
                        <DataGridTextColumn Header="Mã Phiếu" Binding="{Binding MaPhieuDV}" Width="80">
                            <DataGridTextColumn.ElementStyle>
                                <Style TargetType="TextBlock">
                                    <Setter Property="HorizontalAlignment" Value="Center"/>
                                    <Setter Property="VerticalAlignment" Value="Center"/>
                                </Style>
                            </DataGridTextColumn.ElementStyle>
                        </DataGridTextColumn>

                        <DataGridTextColumn Header="Ngày Lập" Binding="{Binding NgayLap, StringFormat=dd/MM/yyyy}" Width="110">
                            <DataGridTextColumn.ElementStyle>
                                <Style TargetType="TextBlock">
                                    <Setter Property="HorizontalAlignment" Value="Center"/>
                                    <Setter Property="VerticalAlignment" Value="Center"/>
                                </Style>
                            </DataGridTextColumn.ElementStyle>
                        </DataGridTextColumn>

                        <DataGridTextColumn Header="Khách Hàng" Binding="{Binding TenKH}" Width="*">
                            <DataGridTextColumn.ElementStyle>
                                <Style TargetType="TextBlock">
                                    <Setter Property="HorizontalAlignment" Value="Left"/>
                                    <Setter Property="VerticalAlignment" Value="Center"/>
                                    <Setter Property="Padding" Value="10,0"/>
                                    <Setter Property="FontWeight" Value="SemiBold"/>
                                </Style>
                            </DataGridTextColumn.ElementStyle>
                        </DataGridTextColumn>

                        <DataGridTextColumn Header="SĐT" Binding="{Binding SDT}" Width="120">
                            <DataGridTextColumn.ElementStyle>
                                <Style TargetType="TextBlock">
                                    <Setter Property="HorizontalAlignment" Value="Center"/>
                                    <Setter Property="VerticalAlignment" Value="Center"/>
                                </Style>
                            </DataGridTextColumn.ElementStyle>
                        </DataGridTextColumn>

                        <DataGridTextColumn Header="Tổng Tiền" Binding="{Binding TongTien, StringFormat={}{0:N0}}" Width="120">
                            <DataGridTextColumn.ElementStyle>
                                <Style TargetType="TextBlock">
                                    <Setter Property="HorizontalAlignment" Value="Right"/>
                                    <Setter Property="VerticalAlignment" Value="Center"/>
                                    <Setter Property="Padding" Value="0,0,10,0"/>
                                </Style>
                            </DataGridTextColumn.ElementStyle>
                        </DataGridTextColumn>

                        <DataGridTextColumn Header="Đã Trả" Binding="{Binding TongTraTruoc, StringFormat={}{0:N0}}" Width="120">
                            <DataGridTextColumn.ElementStyle>
                                <Style TargetType="TextBlock">
                                    <Setter Property="HorizontalAlignment" Value="Right"/>
                                    <Setter Property="VerticalAlignment" Value="Center"/>
                                    <Setter Property="Padding" Value="0,0,10,0"/>
                                    <Setter Property="Foreground" Value="Green"/>
                                    <Setter Property="FontWeight" Value="SemiBold"/>
                                </Style>
                            </DataGridTextColumn.ElementStyle>
                        </DataGridTextColumn>

                        <DataGridTextColumn Header="Còn Lại (Nợ)" Binding="{Binding TongConLai, StringFormat={}{0:N0}}" Width="120">
                            <DataGridTextColumn.ElementStyle>
                                <Style TargetType="TextBlock">
                                    <Setter Property="HorizontalAlignment" Value="Right"/>
                                    <Setter Property="VerticalAlignment" Value="Center"/>
                                    <Setter Property="Padding" Value="0,0,10,0"/>
                                    <Setter Property="Foreground" Value="#E74C3C"/>
                                    <Setter Property="FontWeight" Value="Bold"/>
                                </Style>
                            </DataGridTextColumn.ElementStyle>
                        </DataGridTextColumn>

                        <DataGridTextColumn Header="Tình Trạng" Binding="{Binding TinhTrang}" Width="150">
                            <DataGridTextColumn.ElementStyle>
                                <Style TargetType="TextBlock">
                                    <Setter Property="HorizontalAlignment" Value="Center"/>
                                    <Setter Property="VerticalAlignment" Value="Center"/>
                                </Style>
                            </DataGridTextColumn.ElementStyle>
                        </DataGridTextColumn>

                    </DataGrid.Columns>
                </DataGrid>
            </Grid>
        </Border>
    </Grid>
    
</UserControl>
