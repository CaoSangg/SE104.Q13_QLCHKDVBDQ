<UserControl x:Class="Project_QLVangBacDaQuy.GUI.UserControls.UserControlQuyDinh"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Project_QLVangBacDaQuy.GUI.UserControls"
             mc:Ignorable="d" 
             d:DesignHeight="600" d:DesignWidth="1000"
             FontFamily="Segoe UI">

    <Grid Background="#F5F7FA" Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>
    
        <StackPanel Grid.Row="0" Margin="0,0,0,20">
            <TextBlock Text="THAY ĐỔI QUY ĐỊNH" Style="{StaticResource HeaderTitle}"/>
            <TextBlock Text="Cập nhật các tham số hệ thống và tỷ lệ lợi nhuận" Foreground="Gray" FontSize="14"/>
            <Separator Background="{StaticResource LuxuryGold}" Margin="0,10,0,0" HorizontalAlignment="Left" Width="100" Height="3"/>
        </StackPanel>

        <Border Grid.Row="1" Background="White" CornerRadius="10" Padding="1" ClipToBounds="True">
            <Border.Effect>
                <DropShadowEffect BlurRadius="20" ShadowDepth="5" Opacity="0.1" Color="Black"/>
            </Border.Effect>

            <Grid>
                <StackPanel VerticalAlignment="Center" HorizontalAlignment="Center" Opacity="0.08" IsHitTestVisible="False">
                    <Border Width="200" Height="200" BorderBrush="#10151B" BorderThickness="4" CornerRadius="100" Margin="0,0,0,15" HorizontalAlignment="Center">
                        <TextBlock Text="💎" FontSize="100" HorizontalAlignment="Center" VerticalAlignment="Center"/>
                    </Border>
                    <TextBlock Text="JEWELRY" FontSize="30" FontWeight="Bold" Foreground="#10151B" HorizontalAlignment="Center"/>
                    <TextBlock Text="MANAGER" Foreground="#10151B" FontSize="25" HorizontalAlignment="Center"/>
                </StackPanel>

                <DataGrid x:Name="dgvQuyDinh" Background="Transparent" 
                          IsReadOnly="False"
                          AutoGenerateColumns="False" CanUserAddRows="False"
                          HeadersVisibility="Column" GridLinesVisibility="Horizontal"
                          HorizontalGridLinesBrush="#F0F0F0" RowHeight="45" BorderThickness="0">

                    <DataGrid.Resources>
                        <Style TargetType="ScrollBar" BasedOn="{StaticResource ThinScrollBarStyle}"/>
                    </DataGrid.Resources>

                    <DataGrid.ColumnHeaderStyle>
                        <Style TargetType="DataGridColumnHeader">
                            <Setter Property="Background" Value="#10151B"/>
                            <Setter Property="Foreground" Value="#D4AF37"/>
                            <Setter Property="FontWeight" Value="Bold"/>
                            <Setter Property="Padding" Value="10"/>
                            <Setter Property="HorizontalContentAlignment" Value="Center"/>
                        </Style>
                    </DataGrid.ColumnHeaderStyle>

                    <DataGrid.Columns>
                        <DataGridTextColumn Header="STT" Binding="{Binding STT}" Width="60" IsReadOnly="True">
                            <DataGridTextColumn.ElementStyle>
                                <Style TargetType="TextBlock">
                                    <Setter Property="HorizontalAlignment" Value="Center"/>
                                    <Setter Property="VerticalAlignment" Value="Center"/>
                                </Style>
                            </DataGridTextColumn.ElementStyle>
                        </DataGridTextColumn>

                        <DataGridTextColumn Header="Tên Quy Định" Binding="{Binding TenHienThi}" Width="*" IsReadOnly="True">
                            <DataGridTextColumn.ElementStyle>
                                <Style TargetType="TextBlock">
                                    <Setter Property="VerticalAlignment" Value="Center"/>
                                    <Setter Property="Padding" Value="10,0"/>
                                    <Setter Property="FontWeight" Value="SemiBold"/>
                                </Style>
                            </DataGridTextColumn.ElementStyle>
                        </DataGridTextColumn>

                        <DataGridTextColumn Header="Giá Trị" Binding="{Binding GiaTri}" Width="150">
                            <DataGridTextColumn.ElementStyle>
                                <Style TargetType="TextBlock">
                                    <Setter Property="HorizontalAlignment" Value="Center"/>
                                    <Setter Property="VerticalAlignment" Value="Center"/>
                                    <Setter Property="Foreground" Value="#007ACC"/>
                                    <Setter Property="FontWeight" Value="Bold"/>
                                </Style>
                            </DataGridTextColumn.ElementStyle>
                            <DataGridTextColumn.EditingElementStyle>
                                <Style TargetType="TextBox">
                                    <Setter Property="HorizontalContentAlignment" Value="Center"/>
                                    <Setter Property="VerticalContentAlignment" Value="Center"/>
                                    <Setter Property="Padding" Value="5"/>
                                </Style>
                            </DataGridTextColumn.EditingElementStyle>
                        </DataGridTextColumn>

                        <DataGridTextColumn Header="Tình Trạng" Binding="{Binding TinhTrang}" Width="150" IsReadOnly="True">
                            <DataGridTextColumn.ElementStyle>
                                <Style TargetType="TextBlock">
                                    <Setter Property="HorizontalAlignment" Value="Center"/>
                                    <Setter Property="VerticalAlignment" Value="Center"/>
                                </Style>
                            </DataGridTextColumn.ElementStyle>
                        </DataGridTextColumn>
                    </DataGrid.Columns>
                </DataGrid>
            </Grid>
        </Border>

        <StackPanel Grid.Row="2" Orientation="Horizontal" HorizontalAlignment="Right" Margin="0,20,0,0">
            <Button x:Name="btnHuy" Content="Hủy Bỏ" Height="45" Width="120" Margin="0,0,15,0"
                    Background="White" Foreground="Gray" BorderBrush="Gray" BorderThickness="1"
                    FontSize="14" FontWeight="SemiBold" Cursor="Hand"
                    Click="btnHuy_Click">
                <Button.Template>
                    <ControlTemplate TargetType="Button">
                        <Border x:Name="bdr" CornerRadius="5" Background="{TemplateBinding Background}" BorderBrush="{TemplateBinding BorderBrush}" BorderThickness="1">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter TargetName="bdr" Property="Background" Value="#F5F5F5"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Button.Template>
            </Button>

            <Button x:Name="btnCapNhat" Content="Lưu Thay Đổi" Height="45" Width="150"
                    Background="{StaticResource LuxuryGold}" Foreground="#10151B"
                    FontSize="14" FontWeight="Bold" Cursor="Hand"
                    Click="btnCapNhat_Click">
                <Button.Template>
                    <ControlTemplate TargetType="Button">
                        <Border x:Name="bdr" CornerRadius="5" Background="{TemplateBinding Background}">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter TargetName="bdr" Property="Opacity" Value="0.9"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Button.Template>
            </Button>
        </StackPanel>
    </Grid>
</UserControl>
