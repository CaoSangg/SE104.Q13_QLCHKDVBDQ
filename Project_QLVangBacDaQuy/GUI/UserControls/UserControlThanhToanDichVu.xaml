<UserControl x:Class="Project_QLVangBacDaQuy.GUI.UserControls.UserControlThanhToanDichVu"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Project_QLVangBacDaQuy.GUI.UserControls"
             mc:Ignorable="d"
             d:DesignHeight="700" d:DesignWidth="1200"
             FontFamily="Segoe UI" Background="#F5F7FA">

    <Grid Margin="10">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="4*" MinWidth="350"/>

            <ColumnDefinition Width="Auto"/>

            <ColumnDefinition Width="6*" MinWidth="450"/>
        </Grid.ColumnDefinitions>

        <Border Grid.Column="0" Background="White" CornerRadius="10" Padding="10">
            <Border.Effect>
                <DropShadowEffect BlurRadius="8" Opacity="0.1"/>
            </Border.Effect>
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="*"/>
                </Grid.RowDefinitions>

                <TextBlock Text="PHIẾU CHƯA HOÀN THÀNH" Style="{StaticResource SectionHeader}" FontSize="16" Margin="0,0,0,10" FontWeight="Bold"/>

                <DataGrid x:Name="dgvPhieu" Grid.Row="1" AutoGenerateColumns="False" 
                          IsReadOnly="True" SelectionMode="Single"
                          SelectionChanged="dgvPhieu_SelectionChanged"
                          Background="White" BorderBrush="#EEE" BorderThickness="1"
                          ScrollViewer.HorizontalScrollBarVisibility="Auto"
                          ScrollViewer.VerticalScrollBarVisibility="Auto">
                    <DataGrid.Columns>
                        <DataGridTextColumn Header="Mã Phiếu" Binding="{Binding MaPhieuDV}" Width="Auto" MinWidth="90" FontWeight="Bold"/>
                        <DataGridTextColumn Header="Khách Hàng" Binding="{Binding TenKH}" Width="*" MinWidth="130"/>
                        <DataGridTextColumn Header="SĐT" Binding="{Binding SDT}" Width="Auto" MinWidth="100"/>
                        <DataGridTextColumn Header="Còn Nợ" Binding="{Binding TongConLai, StringFormat={}{0:N0}}" Width="Auto" MinWidth="100" FontWeight="Bold" Foreground="Red"/>
                    </DataGrid.Columns>
                </DataGrid>
            </Grid>
        </Border>

        <GridSplitter Grid.Column="1" Width="5" HorizontalAlignment="Center" VerticalAlignment="Stretch" Background="Transparent" ShowsPreview="True"/>

        <Border Grid.Column="2" Background="White" CornerRadius="10" Padding="10" Margin="5,0,0,0" ClipToBounds="True">
            <Border.Effect>
                <DropShadowEffect BlurRadius="8" Opacity="0.1"/>
            </Border.Effect>
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="*"/>
                </Grid.RowDefinitions>

                <TextBlock Text="CHI TIẾT DỊCH VỤ CẦN THANH TOÁN" Style="{StaticResource SectionHeader}" FontSize="16"/>

                <Border Grid.Row="1" Background="#10151B" CornerRadius="8" Padding="15,10" Margin="0,5,0,15">
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="Auto"/>
                        </Grid.ColumnDefinitions>

                        <StackPanel Grid.Column="0" VerticalAlignment="Center">
                            <StackPanel Orientation="Horizontal" Margin="0,0,0,5">
                                <TextBlock Text="Mã Phiếu:" Foreground="#AAAAAA" FontSize="14"/>
                                <TextBlock x:Name="lblMaPhieu" Text="..." Foreground="#D4AF37" FontWeight="Bold" FontSize="15" Margin="10,0,0,0"/>
                            </StackPanel>
                            <StackPanel Orientation="Horizontal">
                                <TextBlock Text="Tổng nợ:" Foreground="#AAAAAA" FontSize="14"/>
                                <TextBlock x:Name="lblTongConLai" Text="0 VNĐ" Foreground="#FF4444" FontWeight="Bold" FontSize="16" Margin="10,0,0,0"/>
                            </StackPanel>
                        </StackPanel>

                        <Button x:Name="btnThanhToanAll" Grid.Column="1" Content="THANH TOÁN HẾT" 
                                Click="btnThanhToanAll_Click"
                                Background="#D4AF37" Foreground="#10151B" FontWeight="Bold" FontSize="13"
                                Padding="15,8" Cursor="Hand" VerticalAlignment="Center" Margin="10,0,0,0">
                            <Button.Resources>
                                <Style TargetType="Border">
                                    <Setter Property="CornerRadius" Value="6"/>
                                </Style>
                            </Button.Resources>
                        </Button>
                    </Grid>
                </Border>

                <StackPanel Grid.Row="2" VerticalAlignment="Center" HorizontalAlignment="Center" Opacity="0.1" IsHitTestVisible="False">
                    <Border Width="180" Height="180" BorderBrush="#10151B" BorderThickness="3" CornerRadius="100" Margin="0,0,0,10" HorizontalAlignment="Center">
                        <TextBlock Text="💎" FontSize="90" HorizontalAlignment="Center" VerticalAlignment="Center"/>
                    </Border>
                    <TextBlock Text="JEWELRY" FontSize="22" FontWeight="Bold" Foreground="#10151B" HorizontalAlignment="Center"/>
                    <TextBlock Text="MANAGER" Foreground="#10151B" FontSize="18" HorizontalAlignment="Center"/>
                </StackPanel>

                <DataGrid x:Name="dgvChiTiet" Grid.Row="2" AutoGenerateColumns="False" 
                          IsReadOnly="True" Background="Transparent" BorderBrush="#EEE" BorderThickness="1"
                          ScrollViewer.HorizontalScrollBarVisibility="Auto"
                          ScrollViewer.VerticalScrollBarVisibility="Auto">
                    <DataGrid.Columns>
                        <DataGridTextColumn Header="Dịch Vụ" Binding="{Binding TenLoaiDV}" Width="*" MinWidth="150">
                            <DataGridTextColumn.ElementStyle>
                                <Style TargetType="TextBlock">
                                    <Setter Property="TextWrapping" Value="Wrap"/>
                                    <Setter Property="Padding" Value="5"/>
                                    <Setter Property="VerticalAlignment" Value="Center"/>
                                </Style>
                            </DataGridTextColumn.ElementStyle>
                        </DataGridTextColumn>

                        <DataGridTextColumn Header="SL" Binding="{Binding SoLuong}" Width="60">
                            <DataGridTextColumn.ElementStyle>
                                <Style TargetType="TextBlock">
                                    <Setter Property="HorizontalAlignment" Value="Center"/>
                                    <Setter Property="VerticalAlignment" Value="Center"/>
                                </Style>
                            </DataGridTextColumn.ElementStyle>
                        </DataGridTextColumn>

                        <DataGridTextColumn Header="Đơn Giá" Binding="{Binding DonGiaDuocTinh, StringFormat={}{0:N0}}" Width="100">
                            <DataGridTextColumn.ElementStyle>
                                <Style TargetType="TextBlock">
                                    <Setter Property="HorizontalAlignment" Value="Right"/>
                                    <Setter Property="Padding" Value="0,0,5,0"/>
                                    <Setter Property="VerticalAlignment" Value="Center"/>
                                </Style>
                            </DataGridTextColumn.ElementStyle>
                        </DataGridTextColumn>

                        <DataGridTextColumn Header="Trạng Thái" Binding="{Binding TinhTrang}" Width="100">
                            <DataGridTextColumn.ElementStyle>
                                <Style TargetType="TextBlock">
                                    <Setter Property="FontWeight" Value="Bold"/>
                                    <Setter Property="VerticalAlignment" Value="Center"/>
                                    <Setter Property="HorizontalAlignment" Value="Center"/>
                                    <Style.Triggers>
                                        <DataTrigger Binding="{Binding TinhTrang}" Value="Đã giao">
                                            <Setter Property="Foreground" Value="Green"/>
                                        </DataTrigger>
                                        <DataTrigger Binding="{Binding TinhTrang}" Value="Chưa giao">
                                            <Setter Property="Foreground" Value="Red"/>
                                        </DataTrigger>
                                    </Style.Triggers>
                                </Style>
                            </DataGridTextColumn.ElementStyle>
                        </DataGridTextColumn>

                        <DataGridTextColumn Header="Còn Lại" Binding="{Binding ConLai, StringFormat={}{0:N0}}" Width="100" FontWeight="Bold">
                            <DataGridTextColumn.ElementStyle>
                                <Style TargetType="TextBlock">
                                    <Setter Property="HorizontalAlignment" Value="Right"/>
                                    <Setter Property="Padding" Value="0,0,5,0"/>
                                    <Setter Property="VerticalAlignment" Value="Center"/>
                                </Style>
                            </DataGridTextColumn.ElementStyle>
                        </DataGridTextColumn>

                        <DataGridTemplateColumn Width="110">
                            <DataGridTemplateColumn.CellTemplate>
                                <DataTemplate>
                                    <Button Content="Thanh Toán" Click="btnThanhToanMon_Click"
                                            Background="#D4AF37" Foreground="#10151B" FontWeight="Bold" FontSize="11"
                                            BorderThickness="0" Cursor="Hand" Margin="2" Padding="5">
                                        <Button.Resources>
                                            <Style TargetType="Border">
                                                <Setter Property="CornerRadius" Value="4"/>
                                            </Style>
                                        </Button.Resources>
                                        <Button.Style>
                                            <Style TargetType="Button">
                                                <Style.Triggers>
                                                    <DataTrigger Binding="{Binding TinhTrang}" Value="Đã giao">
                                                        <Setter Property="Visibility" Value="Collapsed"/>
                                                    </DataTrigger>
                                                </Style.Triggers>
                                            </Style>
                                        </Button.Style>
                                    </Button>
                                </DataTemplate>
                            </DataGridTemplateColumn.CellTemplate>
                        </DataGridTemplateColumn>
                    </DataGrid.Columns>
                </DataGrid>
            </Grid>
        </Border>
    </Grid>
</UserControl>
