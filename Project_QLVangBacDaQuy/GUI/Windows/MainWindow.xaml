<Window x:Class="Project_QLVangBacDaQuy.GUI.Windows.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Phần mềm Quản lý Vàng Bạc Đá Quý" Height="700" Width="1200" 
        WindowStartupLocation="CenterScreen"
        WindowStyle="None"
        ResizeMode="CanResize"
        AllowsTransparency="True"
        Background="Transparent"
        FontFamily="Segoe UI">

    <Border Background="{StaticResource MainBlack}" CornerRadius="10" BorderBrush="#333333" BorderThickness="1">
        <Grid>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="240"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>

            <Border Grid.Column="0" Background="{StaticResource SidebarBg}" CornerRadius="10,0,0,10">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*"/>
                        <RowDefinition Height="Auto"/>
                    </Grid.RowDefinitions>

                    <StackPanel Grid.Row="0" Margin="0,30,0,30" HorizontalAlignment="Center">
                        <Border Width="60" Height="60" BorderBrush="{StaticResource LuxuryGold}" BorderThickness="1.5" CornerRadius="30" Margin="0,0,0,10">
                            <TextBlock Text="💎" Foreground="White" FontSize="28" HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                        <TextBlock Text="JEWELRY" Foreground="{StaticResource LuxuryGold}" FontSize="18" FontWeight="Bold" HorizontalAlignment="Center"/>
                        <TextBlock Text="MANAGER" Foreground="Gray" FontSize="10" HorizontalAlignment="Center"/>
                    </StackPanel>

                    <ScrollViewer Grid.Row="1" VerticalScrollBarVisibility="Hidden">
                        <StackPanel Margin="0,10">
                            <TextBlock Text="NGHIỆP VỤ" Foreground="White" FontSize="15" FontWeight="Bold" Margin="20,10,0,5"/>
                            <Button x:Name="btnBanHang" Content="Lập Phiếu Bán Hàng" Style="{StaticResource MenuButton}" Click="Menu_Click"/>
                            <Button x:Name="btnMuaHang" Content="Lập Phiếu Nhập Hàng" Style="{StaticResource MenuButton}" Click="Menu_Click"/>
                            <Button x:Name="btnDichVu" Content="Lập Phiếu Dịch Vụ" Style="{StaticResource MenuButton}" Click="Menu_Click"/>
                            <Button x:Name="btnThanhToanDichVu" Content="Thanh Toán Dịch Vụ" Style="{StaticResource MenuButton}" Click="Menu_Click"/>

                            <TextBlock Text="TRA CỨU &amp; BÁO CÁO" Foreground="White" FontSize="15" FontWeight="Bold" Margin="20,20,0,5"/>
                            <Button x:Name="btnTraCuuSP" Content="Tra cứu Sản phẩm" Style="{StaticResource MenuButton}" Click="Menu_Click"/>
                            <Button x:Name="btnTraCuuDV" Content="Tra cứu Phiếu Dịch vụ" Style="{StaticResource MenuButton}" Click="Menu_Click"/>
                            <Button x:Name="btnTonKho" Content="Báo cáo Tồn kho" Style="{StaticResource MenuButton}" Click="Menu_Click"/>
                            <Button x:Name="btnDoanhThu" Content="Báo cáo Doanh thu" Style="{StaticResource MenuButton}" Click="Menu_Click"/>

                            <TextBlock Text="HỆ THỐNG" Foreground="White" FontSize="15" FontWeight="Bold" Margin="20,20,0,5"/>
                            <Button x:Name="btnQuyDinh" Content="Thay đổi Quy định" Style="{StaticResource MenuButton}" Click="Menu_Click"/>
                            <Button x:Name="btnTrangChu" Content="Về trang chủ" Style="{StaticResource MenuButton}" Click="Menu_Click"/>
                            <Button x:Name="btnQuanLyNhanSu" Content="Quản lý Nhân sự" Style="{StaticResource MenuButton}" Click="Menu_Click"/>
                            <Button x:Name="btnQuanLyDanhMuc" Content="Quản Lý Danh Mục" Style="{StaticResource MenuButton}" Click="Menu_Click"/>
                        </StackPanel>
                    </ScrollViewer>

                    <Button x:Name="btnDangXuat" Grid.Row="2" Click="BtnDangXuat_Click" Margin="20,0,20,20" Height="40" Background="Transparent" BorderThickness="1" BorderBrush="#333333" Cursor="Hand">
                        <Button.Template>
                            <ControlTemplate TargetType="Button">
                                <Border x:Name="bdr" CornerRadius="5" BorderBrush="{TemplateBinding BorderBrush}" BorderThickness="1" Background="Transparent">
                                    <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                                        <TextBlock Text="Đăng Xuất" Foreground="{StaticResource LuxuryGold}" VerticalAlignment="Center"/>
                                    </StackPanel>
                                </Border>
                                <ControlTemplate.Triggers>
                                    <Trigger Property="IsMouseOver" Value="True">
                                        <Setter TargetName="bdr" Property="Background" Value="#251010"/>
                                        <Setter TargetName="bdr" Property="BorderBrush" Value="#FF5555"/>
                                    </Trigger>
                                </ControlTemplate.Triggers>
                            </ControlTemplate>
                        </Button.Template>
                    </Button>
                </Grid>
            </Border>

            <Grid Grid.Column="1">
                <Grid.RowDefinitions>
                    <RowDefinition Height="35"/>
                    <RowDefinition Height="*"/>
                </Grid.RowDefinitions>

                <Grid Grid.Row="0" Background="Transparent" MouseLeftButtonDown="Header_MouseLeftButtonDown">
                    <StackPanel Orientation="Horizontal" HorizontalAlignment="Right" VerticalAlignment="Top">
                        <Button Content="−" Style="{StaticResource WinBtn}" Click="btnMinimize_Click"/>
                        <Button Content="☐" Style="{StaticResource WinBtn}" Click="btnMaximize_Click"/>
                        <Button Content="✕" Style="{StaticResource CloseBtn}" Click="btnClose_Click"/>
                    </StackPanel>

                    <TextBlock Text="PHẦN MỀM QUẢN LÝ CỬA HÀNG KINH DOANH VÀNG BẠC ĐÁ QUÝ" 
                               Foreground="White" VerticalAlignment="Center" HorizontalAlignment="Left" 
                               Margin="20,0,0,0" FontSize="15" FontWeight="SemiBold"/>
                </Grid>

                <Border Grid.Row="1" Background="#F5F7FA" CornerRadius="10" Margin="0,0,10,10" ClipToBounds="True">
                    <ContentControl x:Name="RenderBody"/>
                </Border>
            </Grid>
        </Grid>
    </Border>
</Window>